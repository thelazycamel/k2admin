<div class="inner-page-header">
  <div class="row">
    <div class="col-sm-8">
      <h2>Tournament: <%= @tournament.name %> Invitations</h2>
    </div>
    <div class="col-sm-4">
       <%= link_to "Create invitation", new_invitation_path(tournament_id: @tournament), class: "btn btn-primary" %>
    </div>
  </div>
</div>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Username</td>
      <th scope="col">Email</th>
      <th scope="col">Accepted</th>
      <th scope="col" width="20%">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @invitations.each do |invitation| %>
      <tr class="<%= cycle("even", "odd") %>">
        <td><%= link_to(invitation.user.username, edit_user_path(invitation.user)) %></td>
        <td><%= invitation.user.email %></td>
        <td><%= "accepted" if invitation.accepted %></td>
        <td>
          <%= link_to("Edit", edit_invitation_path(invitation), class:"btn btn-success btn-sm") %>
          <%= link_to("Destroy", invitation_path(invitation), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm") %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="5" class="centre">
        <%= paginate @invitations, theme: 'twitter-bootstrap-4' %>
      </td>
    </tr>
  </tfoot>
</table>
